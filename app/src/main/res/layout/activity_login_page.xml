<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="117dp">

        <Button
            android:id="@+id/push_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="426dp"
            android:background="@drawable/sigin"
            android:padding="15dp"
            android:text="Sign up"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/careGiverLoginButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="349dp"
            android:layout_marginEnd="85dp"
            android:background="@drawable/borderedbutton"
            android:text="Caregiver"
            android:textColor="#2BCFB7"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="407dp" />

        <Button
            android:id="@+id/patientLoginButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="85dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/borderedbutton"
            android:text="Patient"
            android:textColor="#2BCFB7"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="407dp" />

        <EditText
            android:id="@+id/loginPhone"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/loginEmail"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="248dp"
            android:ems="10"
            android:inputType="textLongMessage"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="333dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="67dp"
            android:layout_marginBottom="248dp"
            android:text="Phone"
            android:textColor="#2BCFB7"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="341dp" />

        <EditText
            android:id="@+id/loginEmail"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="152dp"
            android:layout_marginBottom="307dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="271dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="67dp"
            android:layout_marginTop="165dp"
            android:text="Name"
            android:textColor="#2BCFB7"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="200dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="67dp"
            android:layout_marginTop="221dp"
            android:text="Email"
            android:textColor="#2BCFB7"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="275dp" />

        <EditText
            android:id="@+id/loginName"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="165dp"
            android:layout_marginEnd="34dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:singleLine="false"
            android:textColor="#2BCFB7"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="196dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>